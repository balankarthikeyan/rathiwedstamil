{
  "editor.fontFamily": "'Fira Code', 'Dank Mono', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 16,
  "editor.formatOnSave": true,
  "css.validate": false,
  "scss.validate": false,
  "javascript.validate.enable": false,
  "[javascript]": {
    "editor.formatOnSave": true
  },
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.prettierrc": true,
    "**/.gitignore": true,
    "**/node_modules": true,
    // "**/.next": true,
    "**/.babelrc": true,
    "**/.editorconfig": true,
    "**/.eslintrc.json": true,
    "**/.nowignore": true,
    "**/**/styles.css": true,
    "globals.d.ts": true,
    ".nowignore": true,
    ".babelrc": true,
    "**/.prettierignore/": true,
    "**/.eslintignore/": true,
    "**/.tmp/": true,
    "**/build": true,
    "**/stylelint.config.js": true,
    "**/yarn.lock": true,
    "**/package-lock.json": true,
    "**/.yarnrc": true,
    "**/__backup.ts": true,
    "**/__backup.tsx": true,
    "assets": true,
    "playground": true,
    "state": true,
    ".dockerignore": true,
    "Dockerfile": true,
    "jest.config.js": true,
    "next-env.d.ts": true,
    "now.json": true,
    "postcss.config.js": true,
    "tsconfig.json": true,
    "tsconfig.rollup.json": true,
    "tslint.json": true,
    "src/scaffolding": true,
    "src/cdn": true,
    "src/builder": true
  },
  "search.exclude": {
    "**/node_modules": true,
    ".prettierrc": true,
    "**/*.md": true,
    "**/**/*.md": true,
    "**/**/**/*.md": true,
    "**/.gitignore": true,
    "**/.next": true,
    "**/.babelrc": true,
    "**/.editorconfig": true,
    "**/.eslintrc.json": true,
    "**/.nowignore": true,
    "**/dist": true,
    "**/**/dist": true,
    "**/*.json": true,
    "**/*unused/**": true,
    "**/*snapshots__": true,
    "**/.vscode": true,
    "**/__backup.ts": true,
    "**/__backup.tsx": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.gitignore": true,
    "**/yarn.lock": false,
    "**/.babelrc": true,
    "**/.editorconfig": true,
    "**/.eslintrc.json": true,
    "**/.nowignore": true,
    "**/**/styles.css": true,
    "**/__backup.ts": true,
    "**/__backup.tsx": true,
    "**/*.md": true
  },
  "editor.formatOnType": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": false
  }
}